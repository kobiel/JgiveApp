<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tithe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jgive.kobieliasi.jgiveapp.TitheActivity"
    tools:showIn="@layout/activity_tithe">

    <RelativeLayout
        android:id="@+id/contentTitheRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Year Spinner -->
        <Spinner
            android:id="@+id/inputYearSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/separatorTextView"
            android:layout_toStartOf="@+id/separatorTextView"
            android:textAlignment="center">
        </Spinner>

        <!-- Date Separator -->
        <TextView
            android:id="@+id/separatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/separator"/>

        <!-- Month Spinner -->
        <Spinner
            android:id="@+id/inputMonthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/separatorTextView"
            android:layout_toEndOf="@+id/separatorTextView">
        </Spinner>

        <!-- Incomes Title -->
        <TextView
            android:id="@+id/incomesTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/separatorTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/incomes"/>

        <!-- Incomes List -->
        <ListView
            android:id="@+id/incomesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/incomesTitleTextView">
        </ListView>

        <!-- Tithe Free Title -->
        <TextView
            android:id="@+id/titheFreeTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/incomesListView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/tithe_free"/>

        <!-- Tithe Free Amount -->
        <ListView
            android:id="@+id/expensesListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/titheFreeTitleTextView">
        </ListView>

        <!-- Donations Title -->
        <TextView
            android:id="@+id/donationsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/expensesListView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/donations"/>

        <!-- Donations List -->
        <ListView
            android:id="@+id/donationsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/donationsTitleTextView">
        </ListView>

        <!-- Provisions Title -->
        <TextView
            android:id="@+id/provisionsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/donationsListView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/provisions"/>

        <!-- Provisions Amount -->
        <TextView
            android:id="@+id/provisionsAmountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignBaseline="@+id/provisionsTitleTextView"
            android:layout_alignBottom="@+id/provisionsTitleTextView"
            android:layout_toEndOf="@+id/provisionsTitleTextView"
            android:layout_toRightOf="@+id/provisionsTitleTextView"
            android:layout_below="@+id/provisionsTitleTextView"
            android:textSize="20sp"/>

        <!-- Balance Title -->
        <TextView
            android:id="@+id/balanceTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/provisionsAmountTextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/balance"/>

        <!-- Balance Amount -->
        <TextView
            android:id="@+id/balanceAmountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_alignBaseline="@+id/balanceTitleTextView"
            android:layout_alignBottom="@+id/balanceTitleTextView"
            android:layout_toEndOf="@+id/balanceTitleTextView"
            android:layout_toRightOf="@+id/balanceTitleTextView"
            android:layout_below="@+id/balanceTitleTextView"
            android:textSize="20sp"/>

    </RelativeLayout>

</ScrollView>
